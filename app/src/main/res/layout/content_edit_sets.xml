<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gymworkoutmate.nickstamp.gymworkoutmate.Activity.EditSetsActivity"
    tools:showIn="@layout/activity_sets">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dim_foreground_disabled_material_dark"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="4dp"
                android:src="@drawable/pullups1" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="4dp"
                android:src="@drawable/pullups1" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TableLayout
                android:id="@+id/table_sets"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:text="Set" />

                    <TextView
                        android:gravity="center"
                        android:text="Reps" />

                </TableRow>

            </TableLayout>
        </ScrollView>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Reps" />

        <EditText
            android:id="@+id/etReps"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:ems="3"
            android:gravity="center"
            android:selectAllOnFocus="true"
            android:text="10" />

        <Button
            android:id="@+id/bAdd"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+" />

        <Button
            android:id="@+id/bSubstract"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-" />

    </TableRow>

</LinearLayout>