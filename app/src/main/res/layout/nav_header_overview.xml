<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/header_back"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.gymworkoutmate.nickstamp.gymworkoutmate.View.CircularImageView
        android:id="@+id/profile_photo"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:clickable="true"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        app:border="true"
        app:border_color="@color/secondary_text"
        app:border_width="1dp"
        app:selector="true"
        app:selector_color="@android:color/transparent"
        app:selector_stroke_color="@color/primary_dark"
        app:selector_stroke_width="1dp" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Nick Stampoulis"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tvUserSecondaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.88 m , 91 Kg"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</LinearLayout>
