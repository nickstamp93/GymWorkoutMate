<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:id="@+id/routine_item_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/tvRoutineName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:text="Workout Name"
            android:textColor="@color/primary_text"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvRoutineType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRoutineName"
            android:paddingTop="12dp"
            android:text="Fat loss"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:paddingTop="16dp" />

        <LinearLayout
            android:id="@+id/llWorkoutExercises"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRoutineType"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="24dp"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/tvMondayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/day_view_busy"
                android:gravity="center"
                android:text="M" />

            <TextView
                android:id="@+id/tvTuesdayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/day_view_rest"
                android:gravity="center"
                android:text="T" />

            <TextView
                android:id="@+id/tvWednesdayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/day_view_busy"
                android:gravity="center"
                android:text="W" />

            <TextView
                android:id="@+id/tvThursdayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/day_view_busy"
                android:gravity="center"
                android:text="T" />

            <TextView
                android:id="@+id/tvFridayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/day_view_rest"
                android:gravity="center"
                android:text="F" />

            <TextView
                android:id="@+id/tvSaturdayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/day_view_busy"
                android:gravity="center"
                android:text="S" />

            <TextView
                android:id="@+id/tvSundayView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/day_view_rest"
                android:gravity="center"
                android:text="S" />


        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>